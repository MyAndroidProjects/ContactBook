<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64acce"
    android:weightSum="100">
    <android.support.v7.widget.Toolbar
        android:id="@+id/weather_forecast_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4852c7">
        <TextView android:id="@+id/weather_forecast_toolbar_title"
            style="@style/style_forecast_toolbar_title"
            android:text="@string/weather_forecast_toolbar_title"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#6f54a7"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/town_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:shadowColor="#5a9fa7"
                android:textColor="#11115b"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="36sp"/>

            <TextView
                android:id="@+id/town_coordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#83ced7"
                android:textStyle="normal"
                android:gravity="center"
                android:textSize="14sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/forecast_card_vertical_weight"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"

        card_view:cardBackgroundColor="#91c1d2"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="4dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_weather_forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/link_to_meteoservice"
        android:background="#a8c8d4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Предоставлено Meteoservice.ru \n https://www.meteoservice.ru"
        android:gravity="center"
        android:textSize="12sp"
        android:autoLink="web"
        android:linksClickable="true"
        />
</LinearLayout>