<resources>

    <!-- Base application theme. -->
    <!--  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  CONTACT STYLES -->

    <style name="style_contact_toolbar_title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/contactToolbarText</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:shadowDx">@integer/contact_toolbar_text_shadow_delta</item>
        <item name="android:shadowDy">@integer/contact_toolbar_text_shadow_delta</item>
        <item name="android:shadowRadius">@integer/contact_toolbar_text_shadow_radius</item>
        <item name="android:shadowColor">@color/contactToolbarTextShadow</item>
    </style>

    <style name="style_contact_info_label" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/contactLabel</item>
        <item name="android:background">@color/contactPrimaryBackground</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/size_medium</item>
    </style>

    <style name="style_contact_info_text" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/size_xlarge</item>
        <item name="android:textColor">@color/contactText</item>
        <item name="android:background">@color/contactSecondaryBackground</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">@dimen/size_medium</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:linksClickable">true</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="style_contact_list_item_text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/size_xxxlarge</item>
        <item name="android:textColor">@color/contactListItemText</item>
        <item name="android:background">@color/contactTertiaryBackground</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/size_medium</item>
        <item name="android:paddingRight">@dimen/size_medium</item>
        <item name="android:shadowColor">@color/contactListItemTextShadow</item>
        <item name="android:shadowDx">@integer/contact_list_text_shadow_delta</item>
        <item name="android:shadowDy">@integer/contact_list_text_shadow_delta</item>
        <item name="android:shadowRadius">@integer/contact_list_text_shadow_radius</item>
        <item name="android:textStyle">bold|italic</item>
        <!--  С этим атрибутом не работает метод OnItemClick() интерфейса AdapterView.OnItemClickListener.
          <item name="android:textIsSelectable">true</item>-->
    </style>

    <style name="style_contact_edit_label" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/contactLabel</item>
        <item name="android:background">@color/contactPrimaryBackground</item>
        <item name="android:gravity">center</item>
        <!-- <item name="android:fontFamily">sans-serif</item> доступно с 16 API, а тут минимум 15 API -->
        <!-- <item name="android:textAlignment">gravity</item> доступно с 17 API, а тут минимум 15 API -->
    </style>

    <style name="style_contact_edit_text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/size_xxxlarge</item>
        <item name="android:textColor">@color/contactText</item>
        <item name="android:background">@color/contactSecondaryBackground</item>
        <item name="android:paddingLeft">@dimen/size_medium</item>
        <item name="android:paddingRight">@dimen/size_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_dialog_message_text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/contactText</item>
        <item name="android:paddingLeft">@dimen/size_medium</item>
        <item name="android:paddingRight">@dimen/size_medium</item>
        <item name="android:paddingTop">@dimen/size_medium</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_dialog_message_text.contact_name">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">@dimen/size_medium</item>
    </style>

    <style name="style_contact_button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/contactButtonText</item>
        <item name="android:layout_marginTop">@dimen/size_xsmall</item>
        <item name="android:layout_marginBottom">@dimen/size_small</item>
        <item name="android:layout_marginLeft">@dimen/size_xsmall</item>
        <item name="android:layout_marginRight">@dimen/size_xsmall</item>
        <item name="android:background">@drawable/selector_button_contact</item>
    </style>

    <style name="style_contact_button.port">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@integer/button_panel_button_weight</item>
    </style>

    <style name="style_contact_button.land">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">@integer/button_panel_button_weight</item>
    </style>

    <style name="style_contact_button.edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/edit_contact_button_horizontal_weight</item>
    </style>

    <style name="style_contact_button.dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/dialog_button_horizontal_weight</item>
    </style>

    <!--  WEATHER FORECAST STYLES -->

    <style name="style_forecast_toolbar_title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/weatherToolbarText</item>
        <item name="android:shadowDx">@integer/forecast_toolbar_text_shadow_delta</item>
        <item name="android:shadowDy">@integer/forecast_toolbar_text_shadow_delta</item>
        <item name="android:shadowRadius">@integer/forecast_toolbar_text_shadow_radius</item>
        <item name="android:shadowColor">@color/weatherToolbarTextShadow</item>
    </style>

    <style name="style_forecast_town" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">@integer/forecast_town_text_shadow_delta</item>
        <item name="android:shadowDy">@integer/forecast_town_text_shadow_delta</item>
        <item name="android:shadowRadius">@integer/forecast_town_text_shadow_radius</item>
        <item name="android:shadowColor">@color/weatherCardViewTownShadow</item>
        <item name="android:textColor">@color/weatherCardViewTownText</item>
    </style>

    <style name="style_forecast_town.coordinates">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="style_forecast_date_time_text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowDx">@integer/forecast_date_time_text_shadow_delta</item>
        <item name="android:shadowDy">@integer/forecast_date_time_text_shadow_delta</item>
        <item name="android:shadowRadius">@integer/forecast_date_time_text_shadow_radius</item>
        <item name="android:textColor">@color/weatherDateTimeText</item>
        <item name="android:background">@color/weatherForecastPrimaryBackground</item>
        <item name="android:shadowColor">@color/weatherDateTimeTextShadow</item>
    </style>

    <style name="style_forecast_label_text" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingLeft">@dimen/size_medium</item>
        <item name="android:textColor">@color/weatherForecastItemLabelText</item>
    </style>

    <style name="style_forecast_label_text.primary">
        <item name="android:background">@color/weatherForecastPrimaryBackground</item>
    </style>

    <style name="style_forecast_label_text.secondary">
        <item name="android:background">@color/weatherForecastSecondaryBackground</item>
    </style>

    <style name="style_forecast_value_text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingRight">@dimen/size_medium</item>
        <item name="android:textColor">@color/weatherForecastItemText</item>
    </style>

    <style name="style_forecast_value_text.primary">
        <item name="android:background">@color/weatherForecastPrimaryBackground</item>
    </style>

    <style name="style_forecast_value_text.secondary">
        <item name="android:background">@color/weatherForecastSecondaryBackground</item>
    </style>

    <style name="style_forecast_link_to_meteoservice_text" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
        <item name="android:background">@color/weatherLinkToMeteoserviceBackground</item>
        <item name="android:textColor">@color/weatherForecastItemText</item>
        <item name="android:paddingLeft">@dimen/size_medium</item>
        <item name="android:paddingRight">@dimen/size_medium</item>
        <item name="android:paddingTop">@dimen/size_xsmall</item>
        <item name="android:paddingBottom">@dimen/size_small</item>
    </style>


</resources>
