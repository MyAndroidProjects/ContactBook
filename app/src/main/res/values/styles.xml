<resources>

    <!-- Base application theme. -->
    <!--  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> -->
         <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_contact_info_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#717a7e</item>
        <item name="android:background">#FFDAB9</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold|italic</item>
        <!-- <item name="android:fontFamily">sans-serif</item> доступно с 16 API, а тут минимум 15 API -->
        <!-- <item name="android:textAlignment">gravity</item> доступно с 17 API, а тут минимум 15 API -->
    </style>

    <style name="style_contact_info_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#372e59</item>
        <item name="android:background">#fcd5b2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">5dp</item>
     <item name="android:textIsSelectable">true</item>
         <item name="android:linksClickable">true</item>
         <item name="android:autoLink">all</item>
     </style>

     <style name="style_contact_list_item_text">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:textColor">#325602</item>
         <item name="android:background">#f2dcc8</item>
         <item name="android:textSize">16sp</item>
         <item name="android:gravity">left</item>
         <item name="android:paddingLeft">5dp</item>
         <item name="android:shadowColor">#256D7B</item>
         <item name="android:shadowDx">2</item>
         <item name="android:shadowDy">2</item>
         <item name="android:shadowRadius">5</item>
         <item name="android:textStyle">bold|italic</item>
         <!--  С этим атрибутом не работает метод OnItemClick() интерфейса AdapterView.OnItemClickListener.
           <item name="android:textIsSelectable">true</item>-->

        </style>

    <style name="style_contact_edit_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#717a7e</item>
        <item name="android:background">#75e4de</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
        <!-- <item name="android:fontFamily">sans-serif</item> доступно с 16 API, а тут минимум 15 API -->
        <!-- <item name="android:textAlignment">gravity</item> доступно с 17 API, а тут минимум 15 API -->
    </style>

    <style name="style_contact_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4a3d7c</item>
        <item name="android:background">#b4edeb</item>
        <item name="android:textSize">18sp</item>
        <!--   <item name="android:gravity">center_vertical|left</item>
          <item name="android:paddingLeft">5dp</item>
          <item name="android:textIsSelectable">true</item>
          <item name="android:linksClickable">true</item>
          <item name="android:inputType">text</item>-->

      </style>

    <style name="style_forecast_date_time_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4a3d7c</item>
        <item name="android:background">#b4edeb</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">#7a5aa7</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_forecast_label_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">#4c25e1</item>
        <item name="android:background">#b4edeb</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="style_forecast_value_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">#4a3d7c</item>
        <item name="android:background">#b4edeb</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_forecast_toolbar_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">#7fccc9</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">#151748</item>
    </style>

    <style name="style_contact_toolbar_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">#f4d0af</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">#7b4b1f</item>
    </style>
      </resources>
